{% extends 'base.html.twig' %}

{% block title %}
	{{ product.slug }}
{% endblock %}

{% block body %}
	<h1 class="text-center text-decoration-underline">{{ product.name }}</h1>

	<div class="d-flex justify-content-around mb-2">

		<button class="btn btn-secondary">
			<i class="bi bi-basket">
				Ajouter à la liste</i>
		</button>

		<a href="{{ path('app_product_index') }}">back to list</a>
	</div>

	<div class="d-flex mb-2">
			{% if product.images|length > 0 %}
		<div class="d-flex flex-column justify-content-start gap-3">
				{% for image in product.images %}
					<img src="{{ vich_uploader_asset(image) }}" alt="{{ product.name }}" class="object-fit-cover w-50 images2">
				{% endfor %}
		</div>
		<img src="{{ vich_uploader_asset(product.images|first) }}" alt="{{ product.name }}" class="img-fluid object-fit-cover big-image">
			{% else %}
				<p>Aucune image disponible pour ce produit.</p>
			{% endif %}

	</div>

	<div class="text-center mb-2">{{ product.description|raw }}</div>
	{% if product.rent == true %}
		<p class="card-text text-center mb-2">Disponible à la location ou l'achat</p>
	{% else %}
		<p class="card-text text-center mb-2">Disponible à l'achat uniquement</p>
	{% endif %}

{% endblock %}
